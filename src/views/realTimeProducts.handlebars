<header>
	<h1>INICIO - Productos en Tiempo Real</h1>
</header>

<main>
	<section>
		<h3>Productos</h3>
		{{!-- Uso de nomenclatura BEM (B de bloque, E de elemento y M de modificador)--}}
		<div class="products">
			<div class="products__list">
				<ul class="products__list__item" id="products-list"></ul>
			</div>
		</div>
	</section>

	<section style="width: 100%">
		<h3>Formulario de Productos</h3>
		<form id="products-form">
			<div>			
				<input type="text" name="title" placeholder="Nombre"/>
			<input type="text" name="description" placeholder="Descripcion"/>
			</div>
			<div>
				<input type="text" name="code" placeholder="Codigo"/>
				<input type="number" name="price" placeholder="Precio"/>
			</div>
			<div>
				<input type="number" name="stock" placeholder="Stock"/>
				<input type="text" name="category" placeholder="Categoria"/>
			</div>
			<div>Â¿Esta activo?<input type="checkbox" name="status"/></div>
			<input type="file" name="thumbnail" placeholder="foto"/>
			</br>
			<br>

			<input type="submit" value="Guardar"/>
		</form>
	</section>

	<section>
		<h3>Eliminar producto</h3>
		<div class="products__delete">
			<input
				type="number"
				class="products__delete__input"
				id="input-product-id"
				placeholder="ID del Producto"
			/>
			<button id="btn-delete-product">Eliminar</button>
		</div>
	</section>

	<p class="error-message" id="error-message"></p>

    <br>

    <button onclick="location.href='http://localhost:8080/';">Ir a home</button>

</main>

{{! El script de socket.io debe estar antes que home.js }}
<script src="/socket.io/socket.io.js"></script>
<script src="/api/public/js/products.socket.js"></script>